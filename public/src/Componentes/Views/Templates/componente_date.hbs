<input
    type="<%=type%>"
    class="form-control datepicker mt-2 ddate <%=css_classes%>" 
    toggle-entity="entitie_form"
    toggle-event="<%= (event_config)? event_config : '' %>"
    id="<%=name%>"
    name="<%=name%>"
    target="<%= target%>"
    placeholder="<%=(placeholder)? placeholder : label %>"
    value="<%= valor%>"
    for="<%= name%>"
    title="<%=(placeholder)? placeholder : label %>"
    <%=(is_disabled)? 'disabled': ''%>
    <%=(is_readonly)? 'readonly': ''%>
/>