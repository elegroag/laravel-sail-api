<% if(tipo == 'afiliacion'){ %>

<div class="card card-stats">
    <a href="<%= url%>" data-type="profile">
        <div class="card-header card-header-warning card-header-icon">
            <div class="card-icon">
                <span class="fas"><%= icon%></span>
            </div>
            <p class="card-category"><%= name%></p>
            <img src='<%= imagen%>' class="img img-principal" />
        </div>
        <div class="card-footer border-0">
            <div class="stats">
                <% if (_.isObject(cantidad)) { %>
                <div class="text-muted text-right">
                    <span class="h5 text-info"><%= cantidad.pendientes %></span> # Pendientes<br />
                    <span class="h5 text-info"><%= cantidad.aprobados %></span> # Aprobados<br />
                    <span class="h5 text-info"><%= cantidad.rechazados %></span> # Rechazados<br />
                    <span class="h5 text-info"><%= cantidad.devueltos %></span> # Devueltos<br />
                    <span class="h5 text-info"><%= cantidad.temporales %></span> # Temporales<br />
                </div>
                <% } %>
            </div>
        </div>
    </a>
</div>

<% } %>

